<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/second">

    <ImageView
        android:id="@+id/imageViewProductCart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:src="@drawable/orig"
        android:padding="8dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewProductCart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textTitleProductCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/galaxy_note_20_ultra"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/marc_pro"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textPriceProductCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3_000_00"
            android:textColor="@color/main"
            android:textSize="16sp"
            android:fontFamily="@font/marc_pro"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/removeButtonCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/remove_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>